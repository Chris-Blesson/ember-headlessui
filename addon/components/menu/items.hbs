{{#if @isOpen}}
  <div
    id={{@guid}}
    aria-labelledby={{@buttonGuid}}
    aria-activedescendant={{@activeItem.element.id}}
    tabindex='-1'
    role='menu'
    ...attributes
    {{on 'keydown' this.onKeydown}}
  >
    {{yield
      (hash
        Item=(component
          'menu/item'
          registerItem=@registerItem
          unregisterItem=@unregisterItem
          goToItem=@goToItem
          closeMenu=@closeMenu
        )
      )
    }}
  </div>
{{/if}}